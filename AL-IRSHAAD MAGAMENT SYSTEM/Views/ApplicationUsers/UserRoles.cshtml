
@inject AL_IRSHAAD_MAGAMENT_SYSTEM.Data.ApplicationDbContext database

@{
    ViewData["Title"] = "User Roles";


    var userRoles = database.UserRoles.ToList();
}


<div class="row card shadow-sm p-4">
    <div class="row">
        <h4 class="col-md-8">Category</h4>
        <div class="col-md-4  text-right">
            <a asp-action="Create" class="btn btn-primary " data-toggle="modal" data-target="#CreateModel">Create</a>
        </div>
    </div>
    <div class="row p-4">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            User 
                        </th>
                        <th>
                            Role 
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in userRoles)
                    {
                        var user = database.Users.FirstOrDefault(u => u.Id == item.UserId);
                        var role = database.Roles.FirstOrDefault(u => u.Id == item.RoleId);
                        <tr>
                            <td>
                                @user.UserName
                            </td>
                            <td>
                                @role.Name
                            </td>
                           
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
